block('tabs')(
    tag()('ul'),
    js()(true),
    content()(function() {
        var tabs = [],
            content = [];

        tabs.push(this.ctx.content.map(function(elem, i) {
            var selected = i === 0 ? { selected : true} : { selected : '' };

            content.push({
                block : 'content',
                mods: selected,
                mix : [{ mods : { 'box' : elem.title }}],
                attrs : { id : elem.title }
            });

            return {
                elem : 'tab',
                elemMods : selected,
                content : elem.title
            };
        }));

        tabs.push({
            block : 'tabContent',
            content : content
        });

        return tabs;
    })
);
